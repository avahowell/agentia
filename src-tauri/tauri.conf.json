{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "agentia",
  "version": "0.1.0",
  "identifier": "com.agentia.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "agentia",
        "width": 1500,
        "dragDropEnabled": false,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "permissions": [
        {
          "identifier": "shell:allow-execute",
          "allow": [
            {
              "name": "run-npx-command",
              "cmd": "npx",
              "args": [
                "-y",
                {
                  "validator": "\\S+"
                }
              ]
            }
          ]
        }
      ]
    }
  }
}