{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-npx-command",
          "cmd": "npx",
          "args": [
            "-y",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    }
  ]
}